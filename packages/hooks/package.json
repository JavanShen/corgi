{
  "name": "@corgwn/hooks",
  "version": "1.0.0-alpha.2",
  "type": "module",
  "description": "hooks for corgwn",
  "scripts": {
    "test": "vitest --coverage",
    "tsc": "tsc",
    "build": "tsc && vite build",
    "prepublishOnly": "pnpm run build"
  },
  "files": [
    "es",
    "lib"
  ],
  "publishConfig": {
    "main": "./lib/index.js",
    "module": "./es/index.js",
    "types": "./es/hooks/index.d.ts",
    "access": "public",
    "exports": {
      ".": {
        "import": "./es/index.js",
        "require": "./lib/index.js"
      }
    }
  },
  "keywords": [
    "hook",
    "react",
    "corgwn"
  ],
  "author": "apine",
  "license": "MIT",
  "dependencies": {
    "@corgwn/utils": "workspace:1.0.0-alpha.3",
    "@corgwn/types": "workspace:^1.0.1",
    "immer": "^10.0.0",
    "use-immer": "^0.9.0"
  },
  "peerDependencies": {
    "react": "^18.2.0"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": ["react"]
    }
  }
}
